pkgname=apps-extra-meta
pkgdesc='Meta package to install some extra apps'
pkgver=2022.09.18
pkgrel=1
arch=(any)
url='https://github.com/sainnhe/repo'
provides=("${pkgname}")
conflicts=("${pkgname}")
install="${pkgname}.install"
source=("${pkgname}.hook"
        'patch.sh')
md5sums=('8d9baaa7d1e25b30f7e4544e92405980'
         'b14a30b5461c1f63a634581994e27019')
depends=(apps-common-meta
         firefox-developer-edition
         ungoogled-chromium
         telegram-desktop
         v2ray
         across
         fontweak
         octave
         gimp
         inkscape
         bleachbit
         netease-cloud-music
         caj2pdf-qt
         qemu-desktop
         marktext-git
         # Zathura
         zathura
         zathura-djvu
         zathura-pdf-mupdf
         zathura-ps
         zathura-cb
         # Code OSS
         neovide-git
         code
         code-marketplace
         code-features
         code-icons
         gnome-keyring
         seahorse
         # Qt
         qt5-base
         qt5-doc
         qt5-examples
         qt6-base
         qt6-charts
         qt6-5compat
         qtcreator
         # Fcitx
         fcitx
         fcitx-configtool
         fcitx-libpinyin
         fcitx-cloudpinyin
         fcitx-table-extra
         fcitx-table-other
         kcm-fcitx
         fcitx-skins
         fcitx-skin-material
         # Libre Office
         libreoffice-still
