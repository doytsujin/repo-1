pkgname=apps-extra-meta
pkgdesc='Meta package to install some extra apps'
pkgver=2021.11.19
pkgrel=1
arch=(any)
url='https://github.com/sainnhe/repo'
provides=("${pkgname}")
conflicts=("${pkgname}")
install="${pkgname}.install"
source=("${pkgname}.hook"
        'patch.sh')
