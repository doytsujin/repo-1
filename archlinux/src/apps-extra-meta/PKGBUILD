pkgname=apps-extra-meta
pkgdesc='Meta package to install some extra apps'
pkgver=2022.02.09
pkgrel=1
arch=(any)
url='https://github.com/sainnhe/repo'
provides=("${pkgname}")
conflicts=("${pkgname}")
install="${pkgname}.install"
source=("${pkgname}.hook"
        'patch.sh')
md5sums=('8d9baaa7d1e25b30f7e4544e92405980'
         '3b3f28d0f3442e2222c5a599dbce484a')
depends=(apps-common-meta
         firefox-developer-edition
         ungoogled-chromium
         telegram-desktop
         v2ray
         across
         clash-for-windows-bin
         fontweak
         octave
         gimp
         inkscape
         bleachbit
         netease-cloud-music
         apple-music-electron
         onedriver
         caj2pdf-qt
         qemu
         # Zathura
         zathura
         zathura-djvu
         zathura-pdf-mupdf
         zathura-ps
         zathura-cb
         # Code OSS
         neovide-git
         code
         code-marketplace
         code-features
         code-icons
         gnome-keyring
         seahorse
         # Qt
         qt5-base
         qt5-doc
         qt5-examples
         qt6-base
         qt6-charts
         qt6-5compat
         qtcreator
         # Fcitx
         fcitx
         fcitx-configtool
         fcitx-libpinyin
         fcitx-cloudpinyin
         fcitx-table-extra
         fcitx-table-other
         kcm-fcitx
         fcitx-skins
         fcitx-skin-material
         # Libre Office
         libreoffice-still
         libreoffice-still-zh-cn
         # Deepin Wine
         deepin-wine-tim
         deepin-wine-wechat
         deepin-wine5
         xsettingsd
         lib32-freetype2-infinality-ultimate)

pkgver() {
    date --utc +"%Y.%m.%d"
}

package() {
    install -Dm 644 "${srcdir}/${pkgname}.hook" "${pkgdir}/usr/share/libalpm/hooks/${pkgname}.hook"
    install -Dm 755 "${srcdir}/patch.sh" "${pkgdir}/usr/share/${pkgname}/patch.sh"
}
