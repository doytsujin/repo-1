# Maintainer: Sainnhe Park <sainnhe@gmail.com>
pkgbase=icursive-nerd-font
pkgname=('otf-operator-mono'
         'ttf-cartograph-mono'
         'ttf-recursive-code-icursive-cg'
         'ttf-cascadia-code-icursive-cg'
         'ttf-cascadia-code-icursive-dk'
         'ttf-dank-mono'
         'ttf-ellograph-mono'
         'ttf-fantasque-icursive-dk'
         'ttf-fantasque-icursive-op'
         'ttf-fira-code-icursive-op'
         'ttf-fira-code-icursive-s12'
         'ttf-hack-icursive-op'
         'ttf-hack-icursive-s12'
         'ttf-inconsolatago-icursive-pb'
         'ttf-inconsolatalgc-icursive-op'
         'ttf-inconsolatalgc-icursive-s12'
         'ttf-lilex-icursive-s12'
         'ttf-lilex-icursive-op'
         'ttf-lilex-icursive-dk'
         'ttf-meslo-icursive-op'
         'ttf-meslo-icursive-s12'
         'ttf-roboto-mono-icursive-pt'
         'ttf-source-code-pro-icursive-op'
         'ttf-source-code-pro-icursive-s12')
pkgver=0.1.0
pkgrel=1
arch=('any')
url='https://github.com/sainnhe/icursive-nerd-font'
license=('unknown')
source=('git+https://github.com/sainnhe/icursive-nerd-font'
	      'git+https://github.com/sainnhe/icursive-nerd-font-non-free')
sha256sums=('SKIP'
            'SKIP')
makedepends=('git')

package_ttf-fira-code-icursive-s12() { #{{{
	  pkgdesc='Fira Code + Script12 BT'
    groups=('icursive-nerd-fonts')
	  _font_dir='Fira Code iCursive S12'
    _repo_dir='icursive-nerd-font'
    _type='TTF'
    cd "${srcdir}/${_repo_dir}/${_font_dir}"
	  find . -type f -exec \
        install -Dm 644 '{}' "${pkgdir}/usr/share/fonts/${_type}/{}" \;
} #}}}
